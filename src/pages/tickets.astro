---
import Layout from '../layouts/Layout.astro';
---
<Layout title="A SONIC AFFAIR">
  <div class='tickets-content'>
    <div class='iframe-overlay' />
    <iframe
      id='eventbrite-iframe'
      src="//eventbrite.ca/tickets-external?eid=621374346397&amp;ref=etckt" 
      frameborder="0" 
      scrolling="auto"
     />
  </div>
</Layout>

<style lang='scss'>
  .tickets-content {
    margin-top: 3rem;
    padding-bottom: 5rem;

    @media (max-width: 1200px) {
      margin-top: 1.5rem;
    }
  }

  .iframe-overlay {
    pointer-events: none; 
    position: absolute;
    width: calc(100% - (2 * var(--side-padding)));
    height: 600px;
    border-radius: 2rem;
    mix-blend-mode: hue;
    position: absolute;
    background: #fc00ff;

    @media (max-width: 1200px) {
      display: none;
    }
  }

  iframe {
    width: 100%;
    height: 600px;
    border-radius: 2rem;

    @media (max-width: 1200px) {
      height: 450px;
    }
  }
</style>
