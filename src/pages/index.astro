---
import Layout from '../layouts/Layout.astro';
---

<Layout title="A SONIC AFFAIR">
  <div class='home-content'>
    <div class='card-wrapper'>
      <div class='card tiger'/>

      <div class='card info'>
        <p>
          A Sonic Affair is a thematic experience based around creative contribution and live music. Please read the FAQ before registering.
        </p>
        <div>
          <h1>
            JUNE 22-25
          </h1>
        </div>
      </div>
    </div>
    <div class='card'>
      <div>
        <div class='lineup-header'>
          <h1>
            MUSIC
          </h1>
          <div>
            <h2>
              PHASE ONE
            </h2>
            <h2>
              [ A-Z ]
            </h2>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style lang='scss'>
  .home-content {
    margin-top: 3rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;

    @media (max-width: 1200px) {
      margin-top: 2rem;
      gap: 2rem;
      flex-direction: column;
    }
  }
  .card-wrapper {
    display: flex;
    gap: 2rem;

    @media (max-width: 1200px) {
      gap: 2rem;
      flex-direction: column;
    }
  }

  .lineup-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;

    div {
      height: 2rem;
    }
    h1 {
      margin: 0;
      line-height: 1.7rem;
      display: inline-block;
    }
    h2 {
      margin: 0;
      height: auto;
      font-size: 1rem;
      line-height: 1rem;
    }
  }

  .card {
    padding: 2rem;
    text-align: center;
    background: #00000080;
    border: 1px solid #ffffff8f;
    border-radius: 2rem;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1.5rem;
    flex-direction: column;

    h1 {
      font-size: var(--text-size-large);
      margin: 0;
    }

    &.tiger {
      padding: 0;
      height: 20rem;
      aspect-ratio: 1 / 1;
      background-size: cover;
      background-image: url('/public/tiger.png');

      @media (max-width: 1200px) {
        gap: 0.5rem;
        height: auto
      }
    }

    &.info {
      padding: 2rem;
      flex-grow: 1;
      font-weight: 600;

      h2 {
        font-size: var(--text-size-large);
        font-weight: 300;
        margin: 0;
      }

      p {
        margin: 0;
        font-weight: 300;
        font-size: var(--text-size);
      }

      @media (max-width: 1200px) {
        padding: 1rem;
        font-size: var(--text-size-large);
      }
    }

    &.about {
      font-size: var(--text-size);
      padding: 5rem;
      flex-grow: 1;
      
      @media (max-width: 1200px) {
        padding: 1rem;
      }
    }
  }
</style>
